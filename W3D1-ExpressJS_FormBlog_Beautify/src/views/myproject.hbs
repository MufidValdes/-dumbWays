<html lang="en">
  {{! ======== Head ======== }}
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Project</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://kit.fontawesome.com/917179b360.css"
      crossorigin="anonymous"
    />
  </head>
  {{! ======== Body ======== }}
  <body>
    <!-- Header -->
    <header id="header">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img
              src="https://dumbways.id/assets/images/brandred.png"
              alt="logo"
              width="40"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav w-100 mb-2 mt-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="./myproject">Add Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./testimonial">My Testimonial</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./contact">Contact Me</a>
              </li>
              <li class="nav-item ms-auto">
                <button type="button" class="btn btn-success">Login</button>
              </li>
            </ul>
          </div>

        </div>
      </nav>
    </header>

    <!-- Main -->
    <main id="main" class="container mt-5">
      <div class="d-flex flex-column justify-content-center">
        <div class="">
          <form
            class="mx-auto"
            style="max-width: 500px;"
            onsubmit="addProject(event)"
          >
            <h1 class="text-center mb-4">Add My Project</h1>
            <div class="form-group">
              <label for="input-project-name">Project Name</label>
              <input
                class="form-control"
                id="input-project-name"
                type="text"
                required
                placeholder="Input your name"
              />
            </div>
            <div class="form-group">
              <label for="startDate">Start Date</label>
              <input class="form-control" type="date" id="startDate" required />
            </div>
            <div class="form-group">
              <label for="endDate">End Date</label>
              <input class="form-control" type="date" id="endDate" required />
            </div>
            <div class="form-group">
              <label for="input-project-desc">Description</label>
              <textarea class="form-control" id="input-project-desc"></textarea>
            </div>
            <div class="form-group">
              <label>Technologies</label>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="checkNode"
                />
                <label class="form-check-label" for="checkNode">NodeJS</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="checkReact"
                />
                <label class="form-check-label" for="checkReact">ReactJs</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="checkNext"
                />
                <label class="form-check-label" for="checkNext">NextJs</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="checkTypescript"
                />
                <label
                  class="form-check-label"
                  for="checkTypescript"
                >TypeScript</label>
              </div>
            </div>
            <div class="form-group">
              <label for="input-uploadImage">Upload Image</label>
              <input
                class="form-control-file"
                type="file"
                id="input-uploadImage"
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary btn-block"
            >Submit</button>
          </form>
        </div>

        <div class="col-md-6 ">
            <h1 class="text-center">My Project</h1>
            <div class="d-flex justify-content-center m-auto p-12 rounded ">
              <div class="d-flex flex-wrap align-items-center justify-content-around" id="contents">
                {{! content }}
                <div class="d-flex flex-column justify-content-center m-auto">
                  <div class="container-profile">
                    <img src="" alt="" />
                    <h4>${dataProject[i].title} </h4>
                    <span id="totalMonth">durasi : 3 bulan</span>
                    <p>${dataProject[i].content}</p>
                  </div>
                  <div class="container-logo">
                    <i class="${dataProject[i].checkReact}"></i>
                    <i class="${dataProject[i].checkNext}"></i>
                    <i class="${dataProject[i].checkNode}"></i>
                  </div>
                  <div class="container-button">
                    <button class="edit-button">edit</button>
                    <button class="delete-button">delete</button>
                  </div>
                </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-light py-3 text-center">
      <p class="mb-0">&copy; 2024 Dumbways. All rights reserved.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://kit.fontawesome.com/917179b360.js"
      crossorigin="anonymous"
    ></script>
    {{!-- <script src="../assets/js/myProject.js"></script> --}}

  </body>
</html>